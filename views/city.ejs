<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/city.css" />
    <title>City Page</title>
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-container">
        <div class="logo">City </div>
        <ul class="nav-links">
          <li><a href="/adminpanel">Home</a></li>
          <li><a href="/list-city">City</a></li>
          <li><a href="/emergencyadmin">Emergency</a></li>
          <li><a href="/admindonation">Donation</a></li>
        </ul>
      </div>
    </nav>

    <div class="city-form">
      <h2>Enter City</h2>
      <form action="/addcity" method="post">
        <div class="form-group">
          <label for="city">City:</label>
          <input
            type="text"
            id="city"
            name="city"
            placeholder="Enter city name"
            required
          />
        </div>
        <button type="submit" class="submit-btn">Submit</button>
      </form>
    </div>

    <div class="city-table">
      <h2>City List</h2>
      <table>
        <thead>
          <% citylist.forEach((item) => { %>
            <tr>
              <th> <%= item.city %></th>
            </tr>
            
        <% }) %>
        </thead>
       
      </table>
    </div>
  </body>
</html>
